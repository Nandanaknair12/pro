<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <TableLayout android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:stretchColumns="10">

                    <TableRow>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="MEMBER  LIST"
                            android:id="@+id/memberlist"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="REQUEST  LOAN"
                            android:id="@+id/requestloan"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="VIEW  ATTENDANCE"
                            android:id="@+id/viewattendance"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="VIEW  THRIFT"
                            android:id="@+id/viewthrift"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="VIEW  EXPENSE"
                            android:id="@+id/viewexpense"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="LOAN  DETAILS"
                            android:id="@+id/loandetails"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="PAYMENT  INFO"
                            android:id="@+id/paymentinfo"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="COMPLAINTS"
                            android:id="@+id/complaints"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="PRIVACY"
                            android:id="@+id/privacy"
                            android:textColor="#000000"
                            android:background="#86F58A"/>


                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:stretchColumns="1">

        <TableRow>

            <Button
                android:id="@+id/changeusername"
                android:background="@drawable/plainoval"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/changeuser"
                android:textSize="15dp"
                android:text="change  username"
                android:layout_marginLeft="70dp"/>


        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:stretchColumns="1">

        <TableRow>

            <Button
                android:id="@+id/changepassword"
                android:background="@drawable/plainoval"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/changepass"
                android:text="change  password"
                android:layout_marginLeft="70dp"/>


        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:stretchColumns="1">

        <TableRow>

            <Button
                android:id="@+id/logout2"
                android:background="@drawable/plainoval"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:text="logout"
                android:layout_marginLeft="70dp"/>


        </TableRow>


    </TableLayout>


</LinearLayout>