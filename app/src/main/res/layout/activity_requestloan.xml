<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <TableLayout android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:stretchColumns="10">

                    <TableRow>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="MEMBER  LIST"
                            android:id="@+id/memberlist"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="REQUEST  LOAN"
                            android:id="@+id/requestloan"
                            android:textColor="#000000"
                            android:background="#86F58A"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="VIEW  ATTENDANCE"
                            android:id="@+id/viewattendance"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="VIEW  THRIFT"
                            android:id="@+id/viewthrift"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="VIEW  EXPENSE"
                            android:id="@+id/viewexpense"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="LOAN  DETAILS"
                            android:id="@+id/loandetails"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="PAYMENT  INFO"
                            android:id="@+id/paymentinfo"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="COMPLAINTS"
                            android:id="@+id/complaints"
                            android:textColor="#000000"
                            android:background="#fff"/>

                        <Button android:layout_height="match_parent"
                            android:layout_width="130dp"
                            android:text="PRIVACY"
                            android:id="@+id/privacy"
                            android:textColor="#000000"
                            android:background="#fff"/>


                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp">

                    <TableRow>
                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="40dp"
                            android:text="  Total  amount"
                            android:textSize="20dp"
                            android:textColor="#030303"/>

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:background="@drawable/textbox"
                            android:textSize="20dp"
                            android:editable="false"
                            android:id="@+id/totalamount"
                            android:textColor="#030303"
                            android:layout_marginRight="100dp"/>

                    </TableRow>


                </TableLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:text="Date"
                            android:textSize="20dp"
                            android:textColor="#030303"
                            android:layout_marginLeft="20dp"/>

                        <EditText android:layout_height="40dp"
                            android:layout_width="match_parent"
                            android:id="@+id/date"
                            android:inputType="date"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="180dp"/>


                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:text="Name"
                            android:textSize="20dp"
                            android:textColor="#030303"
                            android:layout_marginLeft="20dp"/>

                        <EditText android:layout_height="40dp"
                            android:layout_width="match_parent"
                            android:id="@+id/name"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="120dp"/>


                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:text="Amount"
                            android:textSize="20dp"
                            android:textColor="#030303"
                            android:layout_marginLeft="20dp"/>

                        <EditText android:layout_height="40dp"
                            android:layout_width="match_parent"
                            android:id="@+id/amount1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="170dp"/>


                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:stretchColumns="1">

                    <TableRow>

                        <Button
                            android:id="@+id/loanreg"
                            android:background="@drawable/oval"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:textSize="20dp"
                            android:text="request  loan"
                            android:layout_marginLeft="100dp"/>


                    </TableRow>


                </TableLayout>



            </LinearLayout>


        </ScrollView>

    </LinearLayout>




</LinearLayout>